<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Engine"
        android:textColor="#E53935"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgSearchEngine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rbGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textColor="#FFFFFF"
            android:buttonTint="#E53935"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbDuckDuckGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DuckDuckGo (Privacy)"
            android:textColor="#FFFFFF"
            android:buttonTint="#E53935"/>

        <RadioButton
            android:id="@+id/rbBing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bing"
            android:textColor="#FFFFFF"
            android:buttonTint="#E53935"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginBottom="24dp"/>

    <!-- Display Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:textColor="#E53935"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Force Dark Mode for Web"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="#E53935"
            android:trackTint="#555555"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy & Data"
        android:textColor="#E53935"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnClearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear History & Cookies"
        android:backgroundTint="#333333"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:backgroundTint="#E53935"
        android:textColor="#FFFFFF"
        android:layout_marginTop="32dp"/>

</LinearLayout>
