<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:padding="24dp">

    <View
        android:id="@+id/dragHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#555555"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/menuBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_media_previous"
        app:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menuForward"
        app:layout_constraintHorizontal_chainStyle="spread"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/menuBack"
        app:layout_constraintStart_toStartOf="@id/menuBack"
        app:layout_constraintEnd_toEndOf="@id/menuBack"/>

    <ImageView
        android:id="@+id/menuForward"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_media_next"
        app:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/menuBack"
        app:layout_constraintStart_toEndOf="@id/menuBack"
        app:layout_constraintEnd_toStartOf="@+id/menuReload"/>

    <ImageView
        android:id="@+id/menuReload"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_popup_sync"
        app:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/menuBack"
        app:layout_constraintStart_toEndOf="@id/menuForward"
        app:layout_constraintEnd_toStartOf="@+id/menuHome"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reload"
        android:textColor="#88FFFFFF"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/menuReload"
        app:layout_constraintStart_toStartOf="@id/menuReload"
        app:layout_constraintEnd_toEndOf="@id/menuReload"/>

    <ImageView
        android:id="@+id/menuHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_rotate" 
        app:tint="#E53935" 
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/menuBack"
        app:layout_constraintStart_toEndOf="@id/menuReload"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/menuShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/menuBack"
        android:layout_marginTop="40dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_share"
            app:tint="#FFFFFF"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Link"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/menuShare">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#FFFFFF"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
