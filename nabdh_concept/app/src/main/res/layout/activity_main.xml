<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_deep"
    android:fitsSystemWindows="true">

    <!-- شريط التقدم النبضي - رفيع جداً في الأعلى -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_gravity="top"
        android:elevation="10dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/pulse_red"
        android:progressBackgroundTint="@android:color/transparent"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- المتصفح الرئيسي -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- طبقة التحميل مع تأثير النبض -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:background="@color/overlay_dark"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <!-- مؤشر النبض المتحرك -->
            <View
                android:id="@+id/pulseIndicator"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/pulse_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/loading"
                android:textColor="@color/pulse_red"
                android:textSize="@dimen/text_size_md" />
        </LinearLayout>
    </FrameLayout>

    <!-- شاشة الخطأ -->
    <LinearLayout
        android:id="@+id/errorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:background="@color/black_deep"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xl"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕"
            android:textColor="@color/pulse_red"
            android:textSize="64sp" />

        <TextView
            android:id="@+id/errorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="@string/error_connection"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:gravity="center"
            android:text="@string/error_connection_message"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_md" />

        <Button
            android:id="@+id/retryButton"
            style="@style/Widget.Nabdh.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="@string/btn_retry"
            android:contentDescription="@string/btn_retry" />
    </LinearLayout>

    <!-- شريط التنقل السفلي - تصميم عصري -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/surface"
        app:elevation="@dimen/elevation_high"
        app:hideOnScroll="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_sm">

            <!-- زر الرجوع -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_back"
                android:src="@drawable/ic_arrow_back"
                android:enabled="false"
                app:tint="@color/text_disabled" />

            <!-- زر التقدم -->
            <ImageButton
                android:id="@+id/btnForward"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:layout_marginStart="@dimen/spacing_xs"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_forward"
                android:src="@drawable/ic_arrow_forward"
                android:enabled="false"
                app:tint="@color/text_disabled" />

            <!-- شريط URL -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/url_bar_height"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_sm">

                <EditText
                    android:id="@+id/urlInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/url_bar_background"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="@dimen/spacing_sm"
                    android:drawableTint="@color/secure_green"
                    android:hint="@string/url_hint"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/url_bar_padding_horizontal"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_disabled"
                    android:textSize="@dimen/text_size_md"
                    android:contentDescription="@string/url_content_description" />
            </FrameLayout>

            <!-- زر التحديث/الإيقاف -->
            <ImageButton
                android:id="@+id/btnRefresh"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_refresh"
                android:src="@drawable/ic_refresh"
                app:tint="@color/text_secondary" />

            <!-- زر القائمة -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="@dimen/bottom_bar_button_size"
                android:layout_height="@dimen/bottom_bar_button_size"
                android:layout_marginStart="@dimen/spacing_xs"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/btn_menu"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_secondary" />
        </LinearLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
